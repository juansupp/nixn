md-content(layout='row' )
  md-table-container(flex)
    table(
      md-table='', 
      md-row-select='', 
      multiple='false', 
      ng-model='selected')
      thead(md-head='',)
        tr(md-row='')
          th(md-column ng-repeat='col in struct.col' ) {{col}}
      tbody(md-body='')
        tr(
          md-row='', 
          md-select='row', 
          md-select-id='', 
          md-auto-select='', 
          dir-paginate='row in struct.row | itemsPerPage: 10'  
          total-items='totalResults' 
          current-page="current")
          td(md-cell='') {{usuario.nombre + usuario.apellido}}
          td(md-cell='') {{usuario.correo}}
          td(md-cell='') {{usuario.telefono}}
          td(md-cell='') {{usuario._rol}}        
    dir-pagination-controls(flex align='center' on-page-change="$ctrl.allUsers({'1':'1'},newPageNumber)")

